{
  "name": "@argdown/cli",
  "description": "A command line interface for exporting Argdown files to html, dot or json.",
  "keywords": [
    "argumentation",
    "argument mapping",
    "Argdown",
    "Markdown"
  ],
  "engines": {
    "node": ">= 8.0.0"
  },
  "version": "1.0.1",
  "license": "MIT",
  "main": "dist/src/cli.js",
  "dependencies": {
    "@argdown/core": "^1.0.1",
    "@argdown/node": "^1.0.0",
    "@types/yargs": "^11.0.0",
    "nyc": "^12.0.2",
    "pkginfo": "^0.4.1",
    "yargs": "^8.0.1"
  },
  "bin": {
    "argdown": "./dist/src/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/christianvoigt/argdown/tree/master/packages/argdown-cli"
  },
  "author": {
    "name": "Christian Voigt",
    "email": "1pxsolidblack@gmail.com"
  },
  "scripts": {
    "deploy": "npm run version:patch && git push --tags origin HEAD:master",
    "build": "npm run clean && npm run build:src",
    "build:src": "tsc",
    "test": "mocha -r ts-node/register --full-trace --require source-map-support/register ./test/**/*.spec.ts",
    "test:custom-process": "mocha -r ts-node/register --full-trace --require source-map-support/register ./test/**/*.spec.ts --fgrep \"custom process\"",
    "coverage": "nyc mocha -r ts-node/register --full-trace --bail --require source-map-support/register ./test/**/*.spec.ts",
    "report": "nyc report",
    "prepublishOnly": "npm run-script build",
    "clean": "rimraf dist/*",
    "version:patch": "npm version patch"
  },
  "readmeFilename": "Readme.md",
  "preferGlobal": true,
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.3",
    "@types/rimraf": "^2.0.2",
    "chai": "^4.1.2",
    "chai-fs": "^2.0.0",
    "copyfiles": "^2.0.0",
    "cpx": "^1.5.0",
    "glob": "^7.1.1",
    "intercept-stdout": "^0.1.2",
    "jest": "^23.1.0",
    "mkdirp": "^0.5.1",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.6",
    "ts-node": "^6.1.2",
    "typedoc": "^0.12.0",
    "typescript": "~2.9.1",
    "typescript-workspace-plugin": "^1.0.5"
  },
  "nyc": {
    "include": [
      "dist/src/**/*.js",
      "dist/src/**/*.jsx"
    ],
    "extension": [
      ".js",
      ".jsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
