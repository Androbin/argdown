{
  "name": "@argdown/node",
  "version": "0.11.9",
  "description": "Async Argdown application for node.js",
  "main": "./lib/src/index.js",
  "types": "./lib/src/index.d.ts",
  "scripts": {
    "deploy": "npm run test && npm run build && npm version patch && npm run push",
    "type-check": "tsc --noEmit",
    "build": "npm run clean && npm run build:src && npm run copy-pdfkit",
    "build:src": "tsc",
    "build:documentation": "typedoc  --options ./typedoc.js",
    "copy-pdfkit": "copyfiles src/pdfkit.js lib",
    "test": "mocha -r ts-node/register --full-trace --bail --require source-map-support/register ./test/**/*.spec.ts",
    "coverage": "nyc mocha -r ts-node/register --full-trace --bail --require source-map-support/register ./test/**/*.spec.ts",
    "report": "nyc report",
    "clean": "rimraf lib/*",
    "prepublish": "npm run-script build",
    "push": "git push --tags origin HEAD:master"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/christianvoigt/argdown/tree/master/packages/argdown-node"
  },
  "keywords": [
    "Argdown"
  ],
  "author": "Christian Voigt",
  "license": "MIT",
  "dependencies": {
    "@argdown/core": "^0.8.7",
    "@babel/polyfill": "^7.0.0-beta.49",
    "@types/chai": "^4.1.3",
    "@types/chokidar": "^1.7.5",
    "@types/glob": "^5.0.35",
    "@types/node": "^10.3.1",
    "chokidar": "^2.0.4",
    "glob": "^7.1.2",
    "lodash": "^4.17.4",
    "mkdirp": "^0.5.1",
    "nyc": "^12.0.2",
    "require-uncached": "^1.0.3",
    "svg-to-pdfkit": "^0.1.7",
    "viz.js": "^1.8.1"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.3",
    "chai": "^4.1.2",
    "copyfiles": "^2.0.0",
    "intercept-stdout": "^0.1.2",
    "jest": "^23.1.0",
    "mkdirp": "^0.5.1",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.6",
    "ts-node": "^6.1.2",
    "typedoc": "^0.11.1",
    "typescript": "~2.9.1",
    "typescript-workspace-plugin": "^1.0.5"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
