{
  "name": "@argdown/core",
  "description": "A pluggable parser for the Argdown argumentation syntax",
  "keywords": [
    "argumentation",
    "parser",
    "argument mapping",
    "Argdown",
    "Markdown",
    "Chevrotain"
  ],
  "version": "0.8.7",
  "license": "MIT",
  "main": "./lib/src/index.js",
  "types": "./lib/src/index.d.ts",
  "dependencies": {
    "@babel/polyfill": "^7.0.0-beta.49",
    "@types/chai": "^4.1.3",
    "@types/js-yaml": "^3.11.1",
    "@types/lodash": "^4.14.109",
    "@types/node": "^10.3.1",
    "chevrotain": "^3.6.0",
    "eventemitter3": "^3.0.0",
    "js-yaml": "^3.12.0",
    "lodash": "^4.17.10",
    "mdurl": "^1.0.1",
    "nyc": "^12.0.2",
    "punycode": "^2.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/christianvoigt/argdown/tree/master/packages/argdown-core"
  },
  "author": {
    "name": "Christian Voigt",
    "email": "1pxsolidblack@gmail.com"
  },
  "browserslist": "last 2 versions, ie 10",
  "scripts": {
    "deploy": "npm run test && npm run build && npm version patch && npm run push",
    "type-check": "tsc --noEmit",
    "build": "npm run clean && npm run build:src && npm run copy:argdown && npm run copy:css",
    "build:src": "tsc",
    "build:documentation": "typedoc  --options ./typedoc.js",
    "copy:argdown": "copyfiles \"test/**/*.{ad,argdown}\" lib",
    "copy:css": "copyfiles \"src/**/*.css\" lib",
    "test": "mocha -r ts-node/register --full-trace --bail --require source-map-support/register ./test/**/*.spec.ts",
    "coverage": "nyc mocha -r ts-node/register --full-trace --bail --require source-map-support/register ./test/**/*.spec.ts",
    "report": "nyc report",
    "clean": "rimraf lib/*",
    "prepublish": "npm run-script build",
    "push": "git push --tags origin HEAD:master"
  },
  "readmeFilename": "Readme.md",
  "preferGlobal": true,
  "devDependencies": {
    "@types/mocha": "^5.2.3",
    "chai": "^4.1.2",
    "copyfiles": "^2.0.0",
    "glob": "^7.1.1",
    "mkdirp": "^0.5.1",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.6",
    "ts-node": "^6.1.2",
    "typedoc": "^0.11.1",
    "typescript": "~2.9.1",
    "typescript-workspace-plugin": "^1.0.5"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
